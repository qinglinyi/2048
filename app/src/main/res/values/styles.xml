<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MapItem">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/normalCardBack</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/map_item</item>
        <item name="android:layout_height">@dimen/map_item</item>
        <item name="android:textSize">@dimen/map_item_text</item>
        <item name="android:textColor">@color/otherFont</item>
        <item name="layout_columnSpan">1</item>
    </style>

</resources>
